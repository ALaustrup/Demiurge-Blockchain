# Docker Compose Environment Configuration
# Copy this file to docker/.env and fill in your values
# Used by docker-compose.production.yml

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL password (REQUIRED)
# Generate a secure password: openssl rand -base64 32
POSTGRES_PASSWORD=your-secure-postgres-password-change-in-production

# PostgreSQL user (default: qor_auth)
POSTGRES_USER=qor_auth

# PostgreSQL database name (default: qor_auth)
POSTGRES_DB=qor_auth

# ============================================================================
# JWT SECRETS (CRITICAL - CHANGE IN PRODUCTION!)
# ============================================================================

# JWT Access Token Secret
# Generate: openssl rand -hex 32
JWT_ACCESS_SECRET=your-super-secret-access-key-minimum-32-characters-change-in-production

# JWT Refresh Token Secret
# Generate: openssl rand -hex 32
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-change-in-production

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================

# Blockchain WebSocket URL (for services)
# Development: ws://demiurge-node:9944
# Production: wss://demiurge.cloud/rpc
SUBSTRATE_RPC_URL=ws://demiurge-node:9944

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# QOR Auth Service Port (default: 8080)
QOR_AUTH__SERVER__PORT=8080

# Hub App Port (default: 3000)
HUB_PORT=3000

# ============================================================================
# SECURITY NOTES
# ============================================================================

# 1. Generate secure passwords:
#    openssl rand -base64 32

# 2. Generate JWT secrets:
#    openssl rand -hex 32

# 3. Never commit .env files

# 4. Use secrets management in production (Docker secrets, Kubernetes secrets, etc.)
