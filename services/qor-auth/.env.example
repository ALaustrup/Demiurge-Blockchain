# Qor Auth Service Configuration
# Copy to .env and fill in values

# Server
QOR_AUTH__SERVER__HOST=0.0.0.0
QOR_AUTH__SERVER__PORT=3000
RUN_ENV=development

# Database (PostgreSQL 18)
QOR_AUTH__DATABASE__URL=postgres://qor_auth:password@localhost:5432/qor_auth
QOR_AUTH__DATABASE__MAX_CONNECTIONS=10

# Redis
QOR_AUTH__REDIS__URL=redis://localhost:6379

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
QOR_AUTH__JWT__ACCESS_SECRET=your-super-secret-access-key-change-in-production
QOR_AUTH__JWT__REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
QOR_AUTH__JWT__ACCESS_EXPIRY_SECS=900
QOR_AUTH__JWT__REFRESH_EXPIRY_SECS=2592000
QOR_AUTH__JWT__ISSUER=qor-auth

# Security
QOR_AUTH__SECURITY__MAX_LOGIN_ATTEMPTS=5
QOR_AUTH__SECURITY__LOCKOUT_DURATION_SECS=900
QOR_AUTH__SECURITY__MAX_SESSIONS=10
QOR_AUTH__SECURITY__PASSWORD_MIN_LENGTH=12

# Substrate RPC (for on-chain operations)
SUBSTRATE_RPC_URL=ws://localhost:9944
