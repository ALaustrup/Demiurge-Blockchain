{
  "name": "@demiurge/wallet-wasm",
  "version": "0.1.0",
  "description": "WASM wallet package for browser-based signing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "wasm-pack build --target web --out-dir dist",
    "build:node": "wasm-pack build --target nodejs --out-dir dist-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir dist-bundler",
    "test": "wasm-pack test --headless --firefox"
  },
  "keywords": [
    "wallet",
    "wasm",
    "substrate",
    "polkadot",
    "crypto"
  ],
  "author": "Demiurge Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alaustrup/Demiurge-Blockchain"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.0"
  },
  "files": [
    "dist",
    "dist-node",
    "dist-bundler"
  ]
}
